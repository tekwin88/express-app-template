<div class="container center1">
  <p>Welcome <%= currentUserLoggedIn %><p>
  <p>This is the new note page.</p>

  <form action="/notes/email" method="POST">
    <div class="form-group">
      <label for="noteEmail" class="control-label-white">Email</label>
      <input id="noteEmail" class="form-control1 control-label-black" type="email" name="email" value="<%= currentUserLoggedIn %>">
    </div>
    <div class="form-group">
      <label for="noteTitle" class="control-label-white">Title</label>
      <input id="noteTitle" class="form-control1 control-label-black" type="title" name="title">
    </div>
    <div class="form-group">
      <label for="noteBody" class="control-label-white">Body</label>
      <textarea class="form-control1 control-label-black" rows="5" id="noteBody" type="body" name="body"></textarea>
    </div>

    <button class="btn btn-sm btn-info" type="submit" value="Submit">Submit</button>
    <button class="btn btn-sm btn-success pull-center"><a href='/'>Home</a></button>
    <button class="btn btn-sm btn-danger pull-right"><span class="glyphicon glyphicon-remove"></span><a href='/'> Cancel</a></button>
  </form>
</div>
